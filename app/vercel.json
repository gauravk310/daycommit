{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/src/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "server/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}